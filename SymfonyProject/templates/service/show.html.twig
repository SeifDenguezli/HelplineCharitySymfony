{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Serviceid</th>
                <td>{{ service.serviceid }}</td>
            </tr>
            <tr>
                <th>Typeservice</th>
                <td>{{ service.typeservice }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
