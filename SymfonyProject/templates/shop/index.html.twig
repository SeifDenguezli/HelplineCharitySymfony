{% extends 'backoffice.html.twig' %}

{% block title %}Shop index{% endblock %}

{% block body %}

    <div class="row">
        {% for shop in shops %}
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                            <div class="mr-5 mt-3">
                                <p class="text-muted">Nom</p>
                                <h3 class="text-primary fs-30 font-weight-medium">{{ shop.name }}</h3>
                            </div>

                            <div class="mr-5 mt-3">
                                <p class="text-muted">Quantit√©</p>
                                <h3 class="text-primary fs-30 font-weight-medium">{{ shop.Qte }}</h3>
                            </div>

                            <div class="mr-5 mt-3">
                                <p class="text-muted">Couleur</p>
                                <h3 class="text-primary fs-30 font-weight-medium">{{ shop.color }}</h3>
                            </div>

                            <div class="mr-5 mt-3">
                                <p class="text-muted">Prix</p>
                                <h3 class="text-primary fs-30 font-weight-medium">{{ shop.cost }} Points</h3>
                            </div>

                            <div class="mr-5 mt-3">
                                <img src="{{ vich_uploader_asset(shop, shop.imageFile) }}" height="250px" width="250px" alt=""/>
                            </div>

                        </div>

                        <br>


                        <div class="d-flex flex-wrap mb-5">

                            <div class="mr-5 mt-3">
                                <a href="{{ path('shop_show', {'shopId': shop.shopId}) }}"><button type="button" class="btn btn-primary" > Afficher</button></a>
                            </div>

                            <div class="mr-5 mt-3">
                                <a href="{{ path('shop_edit', {'shopId': shop.shopId}) }}"><button type="button" class="btn btn-warning" >modifier</button></a>
                            </div>

                        </div>

                    </div>
                </div>
        {% endfor %}
            </div>
    <div class="pagination">
        {{ knp_pagination_render(shops, '@KnpPaginator/Pagination/twitter_bootstrap_v3_pagination.html.twig') }}
    </div>
    </div>

    <a href="{{ path('shop_new') }}"><button type="button" class="btn btn-success">Ajouter</button></a>
{% endblock %}

