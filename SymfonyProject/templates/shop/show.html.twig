{% extends 'backoffice.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}
    <h1>Shop</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ShopId</th>
                <td>{{ shop.shopId }}</td>
            </tr>

            <tr>
                <th>Name</th>
                <td>{{ shop.name }}</td>
            </tr>
            <tr>
                <th>Qte</th>
                <td>{{ shop.Qte }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ shop.color }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ shop.cost }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('shop_index') }}"><button type="button" class="btn btn-primary" >Retour</button></a>

    <a href="{{ path('shop_edit', {'shopId': shop.shopId}) }}"><button type="button" class="btn btn-warning" >Edit</button></a>

    {{ include('shop/_delete_form.html.twig') }}
{% endblock %}
