{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}


{% block body %}
    <form action="{{ path('account_login') }}" method="post">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" name="_username" id="email" class="form-control" placeholder="Adress Email ...">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe ...">
        </div>
        <div class="form-group">
            <button type="submit" class="btnbtn-success">Connexion !</button>
        </div>

    </form>

{% endblock %}


