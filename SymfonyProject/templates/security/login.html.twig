    <!DOCTYPE html>
    <html lang="en" >
    <head>
        <meta charset="UTF-8">
        <title>CodePen - animated form</title>
        <link href="{{ asset('css/stylelogin.css') }}" rel="stylesheet">

    </head>
    <body>
    <!-- partial:index.partial.html -->
    <div id="container" class="container">
        <!-- FORM SECTION -->
        <div class="row">
            <!-- SIGN UP -->
            <div class="col align-items-center flex-col sign-up">
                <div class="form-wrapper align-items-center">
                    <div class="form sign-up">
                        <iframe src={{ asset('inscription') }}> </iframe>


                        <p style="margin-top: -10px">
							<span>
								Vous avez déjà un compte?
							</span>
                            <b onclick="toggle()" class="pointer">
                                Se connecter ici
                            </b>
                        </p>
                    </div>
                </div>

            </div>
            <!-- END SIGN UP -->
            <!-- SIGN IN -->
            <div class="col align-items-center flex-col sign-in">
                <div class="form-wrapper align-items-center">
                    <form action="{{ path('security_login') }}" method="post">
                        <div class="form sign-in">
                            <div class="input-group">
                                <i class='bx bxs-user'></i>
                                <div class="form-group">
                                    <input placeholder="Adresse email ..." required name="_username" type="text" class="form-control" value="{{ last_username }}">
                                </div>
                            </div>
                            <div class="input-group">
                                <i class='bx bxs-lock-alt'></i>
                                <div class="form-group">
                                    <input placeholder="Mot de passe ..." required name="_password" type="password" class="form-control">
                                </div>
                            </div>
                            <div align="center" class="form-group">
                                <button  type="submit" class="btn btn-success">Connexion ! </button>
                            </div>
                            <p style="color: red">
                                <b onclick="window.location='http://127.0.0.1:8000/renouvellement-mot-de-passe/requete'" class="pointer">
                                    Mot de passe oublié?
                                </b>
                            </p>
                            <p>
							<span>
								Vous n'avez pas de compte ?
							</span>
                                <b onclick="toggle()" class="pointer">
                                    Inscrivez-vous ici
                                </b>
                            </p>
                        </div>
                </form>
                </div>
                <div class="form-wrapper">

                </div>
            </div>
            <!-- END SIGN IN -->
        </div>
        <!-- END FORM SECTION -->
        <!-- CONTENT SECTION -->
        <div class="row content-row">
            <!-- SIGN IN CONTENT -->
            <div class="col align-items-center flex-col">
                <div class="text sign-in">
                    <h2 style="color: #20212B">
                        Bienvenue
                    </h2>

                </div>
                <div class="img sign-in">

                </div>
            </div>
            <!-- END SIGN IN CONTENT -->
            <!-- SIGN UP CONTENT -->
            <div class="col align-items-center flex-col">
                <div class="img sign-up">

                </div>
                <div class="text sign-up">
                    <h2>
                        Rejoignez-nous
                    </h2>

                </div>
            </div>
            <!-- END SIGN UP CONTENT -->
        </div>
        <!-- END CONTENT SECTION -->
    </div>
    <!-- partial -->
    <script>let container = document.getElementById('container')

        toggle = () => {
            container.classList.toggle('sign-in')
            container.classList.toggle('sign-up')
        }

        setTimeout(() => {
            container.classList.add('sign-in')
        }, 200)</script>

    </body>
    </html>


