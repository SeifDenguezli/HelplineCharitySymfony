{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Productid</th>
                <th>Name</th>
                <th>Quantite</th>
                <th>PrixApprox</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.productid }}</td>
                <td>{{ produit.name }}</td>
                <td>{{ produit.quantite }}</td>
                <td>{{ produit.prixApprox }}</td>
                <td>
                    <a href="{{ path('produits_show', {'productid': produit.productid}) }}">show</a>
                    <a href="{{ path('produits_edit', {'productid': produit.productid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produits_new') }}">Create new</a>
{% endblock %}
