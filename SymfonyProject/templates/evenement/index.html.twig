                </div>
            </div>
        </div>

    </div>
    <!-- Carousel End -->
{% endblock %}



{% block body %}

    <div class="event">
        <div class="container">
            <div class="section-header text-center">
                <p>Evenements Actifs</p>
                <h2>Explorez notre actualité d'évènements </h2>
            </div>
            <div class="row">

                {% for evenement in evenements %}
                    <div class="col-lg-6">
                        <div class="event-item">
                            {#
                            If statement used to display either uploaded image with VichUpload or Random image from the FakerBundle
                                To remove after stop using FixtureBundle
                                Only keep :::::   <img src="{{ vich_uploader_asset(evenement) }}">
                            #}
                            {% if evenement.updatedAt is not null %}
                                <img src="{{ vich_uploader_asset(evenement) }}" width = "600" height = "400">
                            {% else %}
                                <img src="{{ evenement.coverImage }}" alt="Image">
                            {% endif %}
                            <div class="event-content">
                                <div class="event-meta">
                                    <p><i class="fa fa-calendar-alt"></i>{{ evenement.dateCreation ? evenement.dateCreation|date('Y-m-d') : '' }}</p>
                                    <p><i class="far fa-clock"></i>{{ evenement.montantCollecte }} TND</p>
                                    <p><i class="fa fa-map-marker-alt"></i>{{ evenement.Region }}</p>
                                </div>
                                <div class="event-text">
                                    <h3>{{ evenement.cause }}</h3>
                                    <p>
                                        {{ evenement.description }}
                                    </p>
                                    <a class="btn btn-custom" href="">Join Now</a>
                                    <a class="btn btn-custom" href="{{ path('evenement_show', {'eventId': evenement.eventId}) }}">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="pagination">
                {{ knp_pagination_render(evenements) }}
            </div>







        </div>
    </div>


    <a class="btn btn-custom" href="{{ path('getFakeData') }}">Generate Database</a>

{% endblock %}

