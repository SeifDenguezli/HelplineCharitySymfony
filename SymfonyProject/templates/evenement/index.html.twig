{% block body %}
    <div class="event">
        <div class="container">
            <div class="section-header text-center">
                <p>Upcoming Events</p>
                <h2>Be ready for our upcoming charity events</h2>
            </div>
            <div class="row">


                {% for evenement in evenements %}

                    <div class="col-lg-6">
                        <div class="event-item">
                            <img src="{{ asset('img/event-1.jpg') }}" alt="Image">
                            <div class="event-content">
                                <div class="event-meta">
                                    <p><i class="fa fa-calendar-alt"></i>{{ evenement.dateCreation ? evenement.dateCreation|date('Y-m-d') : '' }}</p>
                                    <p><i class="fa fa-usd" aria-hidden="true"></i>{{ evenement.montantCollecte }} TND</p>
                                    <p><i class="fa fa-map-marker-alt"></i>{{ evenement.region }}</p>
                                </div>
                                <div class="event-text">
                                    <h3>{{ evenement.doncategorie }}</h3>
                                    <p>
                                        {{ evenement.description }}
                                    </p>
                                    <a class="btn btn-custom" href="">Participer</a>
