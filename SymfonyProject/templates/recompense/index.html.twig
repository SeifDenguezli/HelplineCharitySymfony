{% extends 'base.html.twig' %}

{% block title %}Recompense index{% endblock %}

{% block body %}
    <h1>Recompense</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Recompenseid</th>
                <th>Nbrepoints</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recompense in recompenses %}
            <tr>
                <td>{{ recompense.recompenseid }}</td>
                <td>{{ recompense.nbrepoints }}</td>
                <td>
                    <a href="{{ path('recompense_show', {'recompenseid': recompense.recompenseid}) }}">show</a>
                    <a href="{{ path('recompense_edit', {'recompenseid': recompense.recompenseid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recompense_new') }}">Ajouter recompense</a>
{% endblock %}
